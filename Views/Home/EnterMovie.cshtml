@{
    ViewBag.Title = "Enter Movie Info";
}

<!--bring in the Movie model-->
@model Assignment3.Models.Movie

<!--form to gather all of the movie info-->
<div>
    <form asp-action="EnterMovie" method="post" >
        <div>
            <label asp-for="Category">Category:</label>
            <input asp-for="Category" />
        </div>

        <div>
            <label asp-for="Title">Title:</label>
            <input asp-for="Title" />
        </div>

        <div>
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" />
        </div>

        <div>
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" />
        </div>

        <div>
            <label asp-for="Rating">Rating:</label>
            <select asp-for="Rating">
                <option value="">Select One</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>

        <div>
            <label asp-for="Edited">Has the movie been edited?</label>
            <input type="checkbox" value="true" asp-for="Edited" />
        </div>

        <div>
            <label asp-for="LentTo">Who has the movie been lent to:</label>
            <input asp-for="LentTo" />
        </div>

        <div>
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" />
        </div>

        <button type="submit">Submit</button>

        <div asp-validation-summary="All"></div>
    </form>
</div>


