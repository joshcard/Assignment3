@{
    ViewBag.Title = "Movie List";
}

<!--Bringing in the IEnumerable-->
@model IEnumerable<Movie>

<center>
    <div>
        <h3>Here are the movies Joel has</h3>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Title</th>
                    <th>Year</th>
                    <th>Director</th>
                    <th>Rating</th>
                    <th>Edited</th>
                    <th>Lent To</th>
                    <th>Notes</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <!--foreach loop to display all of the movies entered during that session-->
            <tbody>
                @foreach (var x in Model)
                {
                    //If statement to make sure that the movie isn't independence day
                    if (x.Title.ToUpper() != "INDEPENDENCE DAY")
                    {
                <tr>
                    <td>@x.Category</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>
                    <td>
                        <form asp-action="DeleteMovie" method="post">
                            <input type="hidden" name="MovieId" value="@x.MovieId" />
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="EditMovie" method="get">
                            <input type="hidden" name="MovieId" value="@x.MovieId" />
                            <input type="hidden" name="Category" value="@x.Category" />
                            <input type="hidden" name="Title" value="@x.Title" />
                            <input type="hidden" name="Year" value="@x.Year" />
                            <input type="hidden" name="Director" value="@x.Director" />
                            <input type="hidden" name="Rating" value="@x.Rating" />
                            <input type="hidden" name="Edited" value="@x.Edited" />
                            <input type="hidden" name="LentTo" value="@x.LentTo" />
                            <input type="hidden" name="Notes" value="@x.Notes" />
                            <button type="submit" class="btn btn-sm btn-primary">
                                Edit
                            </button>
                        </form>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</center>
